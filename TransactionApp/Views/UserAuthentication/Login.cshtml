@model TransactionApp.Models.DTO.LoginModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login Form</title>
    <link rel="stylesheet" href="~/css/Login.css" />
  
</head>
<body >
    <div class="login-box">
        <h2>Login</h2>
        <form asp-action="Login" method="post">
            <div class="user-box">
                <input type="text" asp-for="Username" required>
                <label asp-for="Username"><b>Username</b></label>
                <div class="msg">
                    <span class="err" asp-validation-for="Username"></span>
                </div>
            </div>

            <div class="user-box">
                <input type="password" asp-for="Password" required>
                <label asp-for="Password"><b>Password</b></label>
                <div class="msg">
                    <span asp-validation-for="Password" class="err"></span>
                </div>
            </div>

            <div class="remember-me">
                <input type="checkbox" id="remember" name="remember">
                <label for="remember">Remember Me</label>
            </div>

            @if (TempData["msg"] != null)
            {
                <div class="msg">@TempData["msg"]</div>
            }

            <button type="submit">Login</button>
            <a class="text-alert" href="/UserAuthentication/Registration">Not a user? Signup</a>
        </form>
    </div>
</body>
</html>
