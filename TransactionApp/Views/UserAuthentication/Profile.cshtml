@model TransactionApp.Models.DTO.UserProfileModel


<h2>Profile</h2>

<form asp-action="Profile" method="post">
   

    <div class="form-group">
        <label asp-for="FirstName">First Name</label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LastName">Last Name</label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Username">Username</label>
        <input asp-for="Username" class="form-control" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PhoneNumber">PhoneNumber</label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>



    <div class="form-group">
        <label asp-for="ProfilePicture">Profile Picture</label>
       
        <!-- You might want to use a file input for uploading profile pictures -->
        <input type="file" asp-for="ProfilePicture" class="form-control" /> 
        <span asp-validation-for="ProfilePicture" class="text-danger"></span>
    </div>

  

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
